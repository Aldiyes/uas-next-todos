generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String   @id @default(cuid())
  name     String?
  email    String?  @unique
  password String?
  role     UserRole @default(USER)
  image    String?

  @@map("users")
}

enum UserRole {
  ADMIN
  USER
}
